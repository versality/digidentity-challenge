<!DOCTYPE html>
<html>
  <head>
    <title>CaseB</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to('Logout', destroy_user_session_path, method: :delete) %> 
    <% end %>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg %>
    <% end %>

    <%= yield %>
  </body>
</html>
